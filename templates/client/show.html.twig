{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="container">
        <h1>Client</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>NameClient</th>
                <td>{{ client.nameClient }}</td>
            </tr>
            <tr>
                <th>MailClient</th>
                <td>{{ client.mailClient }}</td>
            </tr>
            <tr>
                <th>NumClient</th>
                <td>{{ client.numClient }}</td>
            </tr>
            <tr>
                <th>AdressClient</th>
                <td>{{ client.adressClient }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('client_index') }}" class="btn btn-dark">Back to list</a>

        <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-success">Edit</a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
