{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="container">
        <h1>Project</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>LabelProject</th>
                <td>{{ project.labelProject }}</td>
            </tr>
            <tr>
                <th>BudgetProject</th>
                <td>{{ project.budgetProject }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>DeadlineProject</th>
                <td>{{ project.deadlineProject ? project.deadlineProject|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ResponsibleProject</th>
                <td>{{ project.responsibleProject }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ project.updated ? project.updated|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('project_index') }}"class="btn btn-dark">Back to list</a>


        <a href="{{ path('project_edit', {'id': project.id}) }}"class="btn btn-success">Edit</a>

        {{ include('project/_delete_form.html.twig') }}
    </div>
{% endblock %}
