{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Project index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Id Client</th>
                <th>LabelProject</th>
                <th>BudgetProject</th>
                <th>Description</th>
                <th>DeadlineProject</th>
                <th>ResponsibleProject</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.id }}</td>
                    <td>{{ project.client.id }}</td>
                    <td>{{ project.labelProject }}</td>
                    <td>{{ project.budgetProject }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.deadlineProject ? project.deadlineProject|date('Y-m-d') : '' }}</td>
                    <td>{{ project.responsibleProject }}</td>
                    <td>{{ project.createdAt ? project.createdAt|date('Y-m-d') : '' }}</td>
                    <td>{{ project.updated ? project.updated|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('project_show', {'id': project.id}) }}"class="btn btn-outline-secondary">Show</a>
                        <a href="{{ path('project_edit', {'id': project.id}) }}"class="btn btn-outline-secondary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('project_new') }}"class="btn btn-success">Create new</a>
    </div>
{% endblock %}
